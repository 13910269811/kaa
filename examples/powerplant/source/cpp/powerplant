#! /bin/bash

### BEGIN INIT INFO
# Provides:          powerplant
# Required-Start:    $all
# Required-Stop:     $all
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start daemon at boot time
# Description:       Enable service provided by daemon.
### END INIT INFO

# NOTE: The $APP_NAME value should match the one in the build.sh script.
APP_NAME="powerplant_demo"

case "$1" in
    start)
        echo "Starting $APP_NAME service..."
        $APP_NAME &
        ;;
    stop)
        echo "Stopping $APP_NAME service..."
        killall $APP_NAME
        ;;
    restart)
        echo "Restarting $APP_NAME service..."
        killall $APP_NAME
        $APP_NAME &
        ;;
esac