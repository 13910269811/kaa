<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:context="http://www.springframework.org/schema/context"
	xmlns:int="http://www.springframework.org/schema/integration"
    xsi:schemaLocation="
            http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context 
            http://www.springframework.org/schema/context/spring-context.xsd
            http://www.springframework.org/schema/integration
        	http://www.springframework.org/schema/integration/spring-integration-4.2.xsd">

    <!-- Node configuration from properties file -->

	<context:annotation-config/>
	<context:property-placeholder />

    <bean id="applicationProfileInboundChannel" 
          class="org.kaaproject.kaa.server.paf.adapters.sample.application.SamplePafApplicationProfileInboundChannel">
        <property name="applicationProfilePath" value="${applicationProfilePath}" />
    </bean>
    
    <bean id="endpointRegistrationRouter" 
   	      class="org.kaaproject.kaa.server.common.paf.shared.application.DefaultPafEndpointRegistrationRouter">
   		<property name="resolutionRequired" value="false"/>
   		<property name="registrationChannel" ref="registrationProcessorChannel"/>
   		<property name="extensionChannel" ref="extensionComposerChannel"/>
   	</bean>
   	
   	<int:channel id="registrationProcessorChannel"/>
   	<int:channel id="extensionComposerChannel"/>
   	   	
   	<int:router ref="endpointRegistrationRouter"
   	            input-channel="applicationProfileInboundChannel" 
   	            default-output-channel="nullChannel"/>
   	            
   	<bean id="registrationProcessor" 
          class="org.kaaproject.kaa.server.paf.adapters.sample.application.SamplePafRegistrationProcessor">
    </bean>
    
    <int:service-activator 
    	input-channel="registrationProcessorChannel" 
    	ref="registrationProcessor" 
    	method="onMessage"
    	output-channel="applicationProfileInboundChannel" 
    	/>
	
    <bean id="extensionComposer" 
          class="org.kaaproject.kaa.server.paf.adapters.sample.application.SamplePafExtensionComposer">
    </bean>
    
    <int:service-activator 
    	input-channel="extensionComposerChannel" 
    	ref="extensionComposer" 
    	method="onMessage"
    	/>

</beans>