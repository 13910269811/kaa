<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
        xmlns:kaa="urn:import:org.kaaproject.kaa.server.admin.client">
       
        <gwt:DockLayoutPanel unit="PX" ui:field="dockPanel">
            <gwt:north size="122">
                <gwt:VerticalPanel width="100%" height="100%">
                    <gwt:cell>
                        <gwt:HorizontalPanel width="100%" height="80px" spacing="5">
                            <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" height="100%">
                                <gwt:FlowPanel width="100%" height="100%" styleName="b-app-sub-header">
                                    <gwt:HorizontalPanel height="100%">
                                        <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" height="100%">
                                            <gwt:HorizontalPanel ui:field="backButtonPanel" spacing="0" styleName="b-app-back-button-panel" visible="false">
                                                <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" height="100%">
                                                    <gwt:Button ui:field="backButton" addStyleNames="b-app-back-button b-app-back-button-header"/>
                                                </gwt:cell>
                                            </gwt:HorizontalPanel>
                                        </gwt:cell>
                                        <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" height="100%">
                                            <gwt:Label ui:field="titleLabel" styleName="b-app-sub-header-title"/>
                                        </gwt:cell>
                                        <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" height="100%">
                                            <gwt:HorizontalPanel spacing="0" addStyleNames="b-app-buttons-panel">
                                                <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE" height="100%">
                                                    <kaa:mvp.view.widget.ImageTextButton ui:field="addButton"/>
                                                </gwt:cell>
                                            </gwt:HorizontalPanel>
                                        </gwt:cell>
                                     </gwt:HorizontalPanel>
                                </gwt:FlowPanel>
                            </gwt:cell>
                        </gwt:HorizontalPanel>
                    </gwt:cell>
                    <gwt:cell horizontalAlignment="ALIGN_LEFT" verticalAlignment="ALIGN_MIDDLE">
                        <kaa:mvp.view.widget.AlertPanel ui:field="errorPanel"/>
                    </gwt:cell>
                </gwt:VerticalPanel>
            </gwt:north>
            
        </gwt:DockLayoutPanel>
       
</ui:UiBinder>